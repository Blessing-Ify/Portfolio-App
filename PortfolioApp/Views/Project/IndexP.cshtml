@model IEnumerable<PortfolioApp.Models.Project>

@{
    ViewData["Title"] = "IndexP";
}

<h1>PROJECTS</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                <button><a asp-action="Update" asp-route-id="@item.ProjectId">Edit</a></button> |
                @*<a asp-action="Details" asp-route-id="@item.ProjectId">Details</a> |*@
                <button><a asp-action="Delete" asp-route-id="@item.ProjectId">Delete</a></button>
            </td>
        </tr>
}
    </tbody>
</table>

<p>
    <button><a asp-action="Add">Create New</a></button>
</p>
