<style>
.noListStyle li{list-style:none;color:red}</style>


        <div style="text-align:center; padding-top:50px">
            <h1>Create New User</h1>
            <div style="padding-top: 15px">
            <form method="Post" asp-action="CreateUser" asp-controller="User">
                <div asp-validation-summary="All" class="noListStyle"></div>
                <p>
                     <span asp-validation-for="LastName" class="noListStyle"></span>
                     <input asp-for="LastName" placeholder="Enter your last name" />
                 </p>
                <p>
                     <span asp-validation-for="FirstName" class="noListStyle" ></span>
                     <input asp-for="FirstName" placeholder="Enter your first name" />
                 </p>
                <p>
                     <span asp-validation-for="Email" class="noListStyle"></span>
                     <input asp-for="Email" placeholder="Enter your email" />
                 </p>
                <p>
                     <span asp-validation-for="Password" class="noListStyle"></span>
                     <input asp-for="Password" placeholder="Enter your password" />
                 </p>
                <p>
                     <span asp-validation-for="ConfirmPassword" class="noListStyle"></span>
                     <input asp-for="ConfirmPassword" placeholder="Confirm password" />
                 </p>
                <button type="submit" class="btn btn-primary">SUBMIT</button>
            </form>
            </div>
        </div>
